style.
  /***Custom Scrollbar***/
  /* width */
  ::-webkit-scrollbar {
    width: 15px;
    height: 15px;
  }

  /* Track */
  ::-webkit-scrollbar-track {
    border-left: 1px solid rgba(136, 136, 136, 0.336);
  }

  /* Handle */
  ::-webkit-scrollbar-thumb {
    background: rgba(136, 136, 136, 0.336);
  }

  /* Handle on hover */
  ::-webkit-scrollbar-thumb:hover {
    background: #555;
  }
  /***Custom Scrollbar***/

  .prose {
    max-width: unset !important;
  }