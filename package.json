{
  "name": "loopar-framework",
  "version": "4.0.0",
  "type": "module",
  "engines": {
    "node": ">=22.12.0"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "preinstall": "node bin/installer-clean.js",

    "dev": "node bin/ensure-site.js && pm2 start loopar.ecosystem.config.mjs && pm2 log --lines 1000", 
    "start": "node bin/ensure-site.js && pm2 start loopar.ecosystem.config.mjs --silent && node loopar-status.js",

    "list": "node loopar-status.js",
    "restart": "pm2 restart all",
    "logs": "pm2 logs",
    "build": "node bin/build-clean.js && npm-run-all build:client build:server",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --outDir dist/server --ssr app/entry-server.jsx"
  },
  "dependencies": {
    "pm2": "6.0.14",
    "@pm2/io": "6.1.0",
    "cli-table3": "0.6.5",
    "inquirer": "^9.2.0",
    "ora": "^7.0.0",
    "chalk": "^5.3.0"
  }
}
