{
  "name": "loopar-framework",
  "version": "1.1.5",
  "private": false,
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "set NODE_ENV=development && node node_modules/loopar",
    "start": "set NODE_ENV=production && node node_modules/loopar",
    "start-backend": "node node_modules/loopar",
    "start-vite": "vite clean && vite",
    "build": "npm-run-all build:client build:server",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --outDir dist/server --ssr src/entry-server.jsx"
  },
  "_moduleAliases": {
    "@root": ".",
    "@loopar": "apps/loopar"
  },
  "dependencies": {
    "loopar": "file:.loopar",
    "stripe": "^17.3.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^3.7.2",
    "@rollup/plugin-dynamic-import-vars": "^2.1.2",
    "@tailwindcss/typography": "^0.5.13",
    "@types/node": "^20.10.4",
    "@types/nprogress": "0.2.3",
    "@types/numeral": "2.0.5",
    "@types/react": "18.2.43",
    "@types/react-dom": "18.3",
    "@typescript-eslint/parser": "^5.61.0",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "autoprefixer": "^10.4.17",
    "daisyui": "^4.6.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-tailwindcss": "^3.13.0",
    "mysql": "^2.18.1",
    "postcss": "^8.4.41",
    "prettier": "^2.8.8",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-critical": "^1.0.13",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.5.4",
    "vite": "^5.4.10",
    "vite-plugin-preload": "^0.4.2"
  }
}
